<%- include('partials/header', { userIsLoggedIn: userIsLoggedIn, loggedInUsername: loggedInUsername, userIsLoggedIn:
  true, _csrf: csrfToken }) %>
  <div class="container mt-5">
    <div class="row">
      <div class="col-sm-8">
        <h1>Är du redo att dela dina tankar?</h1>
        <div class="card">
          <div class="card-body">
            <!-- Makes POST request to /newpost route -->
            <form action="/newpost" method="POST">

              <div class="form-group">
                <label for="title">Titel</label>

                <input type="text" class="form-control" name="title" required="true">
              </div>
              <div class="form-group">
                <label for="content">Skriv ditt otroliga blogginlägg här</label>

                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

                <textarea class="form-control" name="content" rows="5" required="true"></textarea>
              </div>
              <button type="submit" class="btn btn-dark">Dela med världen idag!</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('partials/footer') %>