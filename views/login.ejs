<%- include('partials/header', { userIsLoggedIn: false }) %>


  <div class="container mt-5">

    <div class="postwrapper">
      <div class="flex-login">
        <div class="col-sm-8">

          <h1>Logga in</h1>
          <% if (userIsCreated) { %>
            <p> Välkommen till din blogg, nu är din profil skapad.<br>
              Logga in nedan!</p>
            <%} %>


              <!-- Makes POST request to /login route -->
              <form action="/login" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="email" class="form-control" name="username" required="true">

                </div>
                <div class="form-group">
                  <label for="password">Lösenord</label>
                  <input type="password" class="form-control" name="password" required="true">
                </div>
                <button type="submit" class="btn btn-dark">Logga in</button>
              </form>
        </div>


      </div>
      <div class="flex-github-btn">
        <a href="/auth/github" class="btn btn-primary">Logga in/Registrera dig med GitHub</a>


      </div>

    </div>
  </div>
  <%- include('partials/footer') %>